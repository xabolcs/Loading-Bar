<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl" xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <binding id="loadingbar" extends="chrome://browser/content/urlbarBindings.xml#urlbar">
        <implementation>
            <property name="completed">
                <setter>
                    this.setAttribute('completed',val);
                    this.style.setProperty('background-size',(val==1?0:100*val)+'% 100%','');
                </setter>
            </property>
        </implementation>
    </binding>
</bindings>